{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Kinta Electric",
	"description": "Tema profesional para Kinta Electric Venezuela",
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1400px"
		},
		"color": {
			"custom": true,
			"link": true,
			"palette": [
				{
					"color": "#1e40af",
					"name": "Azul Kinta Electric",
					"slug": "kinta-blue"
				},
				{
					"color": "#f59e0b",
					"name": "Amarillo Kinta Electric",
					"slug": "kinta-yellow"
				},
				{
					"color": "#1f2937",
					"name": "Gris Oscuro",
					"slug": "dark-gray"
				},
				{
					"color": "#f3f4f6",
					"name": "Gris Claro",
					"slug": "light-gray"
				}
			]
		},
		"typography": {
			"customFontSize": true,
			"lineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "Inter, sans-serif",
					"name": "Inter",
					"slug": "inter"
				}
			]
		},
		"spacing": {
			"defaultSpacingSizes": false,
			"margin": true,
			"padding": true,
			"units": [ "%", "px", "em", "rem", "vh", "vw" ]
		}
	},
	"styles": {
		"color": {
			"background": "#ffffff",
			"text": "#1f2937"
		},
		"typography": {
			"fontFamily": "Inter, sans-serif",
			"fontSize": "16px",
			"lineHeight": "1.6"
		}
	}
}
